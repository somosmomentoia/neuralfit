# Database (Railway provides this automatically)
DATABASE_URL="postgresql://user:password@localhost:5432/gofit?schema=public"

# JWT Secret - CHANGE THIS IN PRODUCTION (use a long random string)
JWT_SECRET="your-super-secret-key-here-min-32-chars"

# Server
PORT=4000

# Ejemplo de configuración para producción:
# DATABASE_URL=postgresql://user:password@host:5432/database
# JWT_SECRET=tu-secret-super-seguro-de-produccion
# ALLOWED_ORIGINS=https://neuralfit.co,https://www.neuralfit.co

# Cloudinary (para almacenamiento de imágenes)
CLOUDINARY_CLOUD_NAME=tu-cloud-name
CLOUDINARY_API_KEY=tu-api-key
CLOUDINARY_API_SECRET=tu-api-secret

# Allowed Origins for CORS (comma-separated for multiple)
# Production: https://neuralfit.co,https://www.neuralfit.co
ALLOWED_ORIGINS="http://localhost:3000"
